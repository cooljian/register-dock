<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tjcloud.stadium.dao.impl.FieldShareDaoImpl">
	<sql id="t_fieldShare">field_share</sql>

	<insert id="insert" parameterType="fieldShare">
		<selectKey resultType="string" order="BEFORE" keyProperty="id">
			SELECT REPLACE(UUID(), '-', '')
		</selectKey>
		INSERT INTO <include refid="t_fieldShare" /> (ID,
		<trim suffixOverrides=",">
			<if test="oneFiledId != null">
				oneFiledId,
			</if>
			<if test="oneStadiumItemId != null">
				oneStadiumItemId,
			</if>
			<if test="stadiumId != null">
				stadiumId,
			</if>
			<if test="enable != null">
				enable,
			</if>
			<include refid="com.tjcloud.data.mapper.inscolumn"/>
		</trim>
		) VALUES (#{id},
		<trim suffixOverrides=",">
			<if test="oneFiledId != null">
				#{oneFiledId},
			</if>
			<if test="oneStadiumItemId != null">
				#{oneStadiumItemId},
			</if>
			<if test="stadiumId != null">
				#{stadiumId},
			</if>
			<if test="enable != null">
				#{enable},
			</if>
			<include refid="com.tjcloud.data.mapper.insparam"/>
		</trim>
		)
	</insert>

	<update id="update" parameterType="fieldShare">
		UPDATE <include refid="t_fieldShare" />
		<trim prefix="SET" suffixOverrides=",">
			<if test="oneFiledId != null">
				oneFiledId = #{oneFiledId},
			</if>
			<if test="oneStadiumItemId != null">
				oneStadiumItemId = #{oneStadiumItemId},
			</if>
			<if test="stadiumId != null">
				stadiumId = #{stadiumId},
			</if>
			<if test="enable != null">
				enable = #{enable},
			</if>
			<include refid="com.tjcloud.data.mapper.update"/>
		</trim>
		 WHERE id = #{id}
	</update>

	<update id="lock" parameterType="string">
		UPDATE <include refid="t_fieldShare" />
		   SET LOCKED = 1
		 WHERE LOCKED = 0
		   AND id = #{id}
	</update>

	<update id="unlock" parameterType="string">
		UPDATE <include refid="t_fieldShare" />
		   SET LOCKED = 0
		 WHERE LOCKED = 1
		   AND id = #{id}
	</update>

	<delete id="deleteById" parameterType="string">
		DELETE FROM <include refid="t_fieldShare" />
		 WHERE id = #{id}
	</delete>

	<select id="getById" parameterType="string" resultType="fieldShare">
		SELECT * FROM <include refid="t_fieldShare" />
		 WHERE id = #{id}
	</select>

	<select id="listBy" parameterType="map" resultType="fieldShare">
		<include refid="listSQL" />
	</select>

	<select id="listPage" parameterType="map" resultType="fieldShare">
		<include refid="listSQL" />
		<if test="pageFirst != null">
			LIMIT #{pageFirst}, #{pageSize}
		</if>
	</select>

	<select id="listPageCount" parameterType="map" resultType="long">
		SELECT COUNT(1) FROM <include refid="t_fieldShare" />
		<where>
			<include refid="condition_sql" />
		</where>
	</select>

	<sql id="listSQL">
		SELECT * FROM <include refid="t_fieldShare" />
		<where>
			<include refid="condition_sql" />
		</where>
		ORDER BY id DESC
	</sql>
   
	<sql id="condition_sql">
		<trim prefixOverrides="AND | OR">
			<if test="id != null">
				AND id = #{id}
			</if>
			<if test="oneFiledId != null">
				AND oneFiledId = #{oneFiledId}
			</if>
			<if test="oneStadiumItemId != null">
				AND oneStadiumItemId = #{oneStadiumItemId}
			</if>
			<if test="stadiumId != null">
				AND stadiumId = #{stadiumId}
			</if>
			<if test="enable != null">
				AND enable = #{enable}
			</if>
			<include refid="com.tjcloud.data.mapper.condition"/>
		</trim>
	</sql>
</mapper>